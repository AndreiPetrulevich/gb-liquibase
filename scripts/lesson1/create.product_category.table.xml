<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.10.xsd ">

    <changeSet id="before_create_manufacturer_table" author="petrulevich.andrei">
        <tagDatabase tag="before_create_manufacturer_table"/>
    </changeSet>

    <changeSet id="create_product_category_table" author="petrulevich.andrei">
        <createTable tableName="PRODUCT_CATEGORY">
            <column name="PRODUCT_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CATEGORY_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="PRODUCT_CATEGORY" columnNames="PRODUCT_ID, CATEGORY_ID"/>
        <addForeignKeyConstraint baseTableName="PRODUCT_CATEGORY" baseColumnNames="PRODUCT_ID" constraintName="fk_product_category_product"
                                 referencedTableName="PRODUCT" referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="PRODUCT_CATEGORY" baseColumnNames="CATEGORY_ID" constraintName="fk_product_category"
                                 referencedTableName="CATEGORY" referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
